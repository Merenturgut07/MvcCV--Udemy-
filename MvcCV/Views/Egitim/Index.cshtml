@using MvcCV.Models.Entity
@model List<TblEgitim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<br />
<h2>Egitim Listesi Sayfası</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Baslik</th>
        <th>AltBaslik</th>
        <th>AltBaslik2</th>
        <th>GNO</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td> @item.ID</td>
            <td> @item.Baslik</td>
            <td> @item.AltBaslik1</td>
            <td> @item.AltBaslik2</td>
            <td> @item.GNO</td>
            <td> @item.Tarih</td>
            <td> <a href="/Egitim/EgitimSil/@item.ID" class="btn btn-danger">Sil</a></td>
            <td> <a href="/Egitim/EgitimGetir/@item.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }


</table>

<a href="/Egitim/EgitimEkle/" class="btn btn-primary"> Yeni Egitim Ekle</a>



