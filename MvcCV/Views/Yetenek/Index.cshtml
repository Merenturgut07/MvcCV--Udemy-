@using MvcCV.Models.Entity
@model List<TblYeteneklerim>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{ string renk = "";}
@{ string LabelRenk = "";}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Yetenek</th>
                                            <th>Derece</th>
                                            <th style="width: 40px">Oran    </th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            if(item.Oran>=0 && item.Oran <= 50)
                                            {
                                                renk = "progress-bar bg-danger";
                                                LabelRenk = "badge bg-danger";
                                            }
                                            if(item.Oran>=51&& item.Oran <= 70)
                                            {
                                                renk = "progress-bar bg-warning";
                                                LabelRenk = "badge bg-warning";
                                            }
                                            if (item.Oran >= 71 && item.Oran <= 84)
                                            {
                                                renk = "progress-bar bg-primary";
                                                LabelRenk = "badge bg-primary";
                                            }

                                            if (item.Oran >= 85 && item.Oran <= 100)
                                            {
                                                renk = "progress-bar bg-success";
                                                LabelRenk = "badge bg-success";
                                            }

                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Yetenek</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@renk" style="width: @item.Oran%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@LabelRenk">@item.Oran%</span></td>
                                                <td><a href="/Yetenek/YetenekSil/@item.ID" class="btn btn-danger" > Sil</a></td>
                                                <td><a href="/Yetenek/YetenekGetir/@item.ID" class="btn btn-success"> Güncelle</a></td>
                                            </tr>
                                            
                                        }
                                        
                                    </tbody>
                                </table>
                                <br />
                                <a href="/Yetenek/YeniYetenek/" class="btn btn-info">Yeni Yetenek Ekleme</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>


